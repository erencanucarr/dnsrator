{
  "manifest_version": 3,
  "name": "DNSRator",
  "version": "2.0.0",
  "description": "DNS record viewer and IP geolocation lookup extension.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "settings.html"
}